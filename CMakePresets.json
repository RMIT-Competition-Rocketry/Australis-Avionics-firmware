{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "Default build options for ARM GCC compiler",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "${sourceDir}/australis/toolchain/toolchain.cmake",
      "cacheVariables": {
        "USE_CCACHE": true,
        "CPM_SOURCE_CACHE": "${sourceDir}/build/.cache",
        "CPM_USE_NAMED_CACHE_DIRECTORIES": true
      },
      "environment": {
        "CFLAGS": "-Wno-unused-variable -Wno-unused-function -g3 -O0"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ]
}
